generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model StudentClass {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  nim      String @unique
  password String
}

model Assistant {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  nim      String @unique
  password String
}
